<script
        type="text/ng-template"
        id="_ride_status.html">

    <div class="rideStatus ng-cloak"
         ng-if="$root.main.userData && $root.main.userData.uber.access_token != ''">

        <div class="header">
            <h1>Ride status</h1>

            <p>View your recent ride stats</p>
        </div>

        <hr>


        <div class="ride_details"
             ng-if="$root.main.uberRideStatus"
                uber-ride-status-directive>

            <div class="status clearfix">
                {[{$root.main.uberRideRequestStatuses[$root.main.uberRideStatus.status]}]}
            </div>

            <table>
                <tbody>
                <tr>
                    <td class="field">ETA</td>
                    <td class="val">{[{$root.main.uberRideStatus.eta}]} min(s)</td>
                </tr>
                <tr>
                    <td class="field">Surge Multiplier</td>
                    <td class="val">x{[{$root.main.uberRideStatus.surge_multiplier}]}</td>
                </tr>
                </tbody>
            </table>

            <div class="driver_profile clearfix"
                 ng-if="$root.main.uberRideStatus.driver">

                <h1 class="heading">Driver profile</h1>

                <img ng-src="{[{$root.main.uberRideStatus.driver.picture_url}]}">

                <div class="driver_info">
                    <ul>
                        <li>
                            <p>{[{$root.main.uberRideStatus.driver.name}]}</p>
                        </li>
                        <li>
                            <i class="fa fa-star"
                               ng-repeat="i in $root.main.uberRideStatus.driver.ratingArray track by $index"></i>
                        </li>
                        <li>
                            <p>{[{$root.main.uberRideStatus.driver.phone_number}]}</p>
                        </li>
                    </ul>
                </div>

            </div>

            <div class="vehicle_profile clearfix"
                 ng-if="$root.main.uberRideStatus.vehicle">

                <h1 class="heading">Vehicle</h1>

                <img ng-src="{[{$root.main.uberRideStatus.vehicle.picture_url}]}">

                <div class="vehicle_info">
                    <ul>
                        <li>
                            <p>Make: {[{$root.main.uberRideStatus.vehicle.make}]}</p>
                        </li>
                        <li>
                            <p>Model: {[{$root.main.uberRideStatus.vehicle.model}]}</p>
                        </li>
                        <li>
                            <p>License plate: {[{$root.main.uberRideStatus.vehicle.license_plate}]}</p>
                        </li>
                    </ul>
                </div>

            </div>

        </div>

        <div class="alert alert-info"
             role="alert"
             ng-if="!$root.main.uberRideStatus">
            You do not have any active requests.
        </div>

    </div>

</script>